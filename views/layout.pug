doctype html
mixin item(title, url)
  li(class="list-item")
    a(href=url class=`${path == url ?  "active" : ""}`)=title 

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    ul 
      +item("Strona Główna", "/")
      +item("Aktualnośći", "/news")
      +item("Quiz", "/quiz")
      +item("Admin", "/admin")
    block content
